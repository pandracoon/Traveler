<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="#F1EEEE"
    android:orientation="vertical"
    android:padding="5dip">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/img_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/img"
        tools:layout_editor_absoluteX="5dp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/img_name"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/location"
        tools:layout_editor_absoluteX="5dp" />

    <ru.nikartm.support.ImageBadgeView
        android:id="@+id/badge"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"
        app:ibv_badgeColor="#00ACC1"
        app:ibv_badgeLimitValue="false"
        app:ibv_badgeTextColor="#00ACC1"
        app:ibv_badgeTextSize="13sp"
        app:ibv_badgeTextStyle="bold"
        app:ibv_badgeValue="1"
        app:ibv_fixedBadgeRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ru.nikartm.support.ImageBadgeView
        android:id="@+id/badge2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:padding="4dp"
        app:ibv_badgeColor="#00ACC1"
        app:ibv_badgeLimitValue="false"
        app:ibv_badgeTextColor="#00ACC1"
        app:ibv_badgeTextSize="0.001sp"
        app:ibv_badgeTextStyle="bold"
        app:ibv_badgeValue="1"
        app:ibv_fixedBadgeRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

